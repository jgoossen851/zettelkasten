{
    "editor.minimap.enabled": false,
    "editor.wrappingIndent": "same",
    "editor.overviewRulerBorder": false,
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "files.defaultLanguage": "markdown",
    "markdownlint.config": {
        "default": true,
        "MD007": { "indent": 2 },
        "MD013": false,
        "MD025": false,
        "MD047": false,
        "MD053": false
    },
    "foam.edit.linkReferenceDefinitions": "withExtensions",
    "foam.openDailyNote.filenameFormat": "yy/mm/dd/HHMM",
    "foam.openDailyNote.directory": "zettel",
    "foam.graph.style": {
        // "background": "#202020",
        // "fontSize": 12,
        // "lineColor": "#277da1",
        // "lineWidth": 0.2,
        // "particleWidth": 1.0,
        "highlightedForeground": "#f9c74f",
        "node": {
            "structure": "#ed3215",
            "note": "#dddddd",
            "procedure": "#f9c74f",
            "list": "#ef915b",
            "lit": "#33cebc",
            "ref": "#167c3d",
            "song": "#279d70",
            // "tag": "#263ea0",
        }
    },
    "filewatcher.commands": [
        {
            "match": "\\.md$",
            "cmd": "foam-vscode.update-wikilinks",
            "event": "onFileChange"
        }
    ],
    "pasteImage.path": "${projectRoot}/attachments",
    "pasteImage.showFilePathConfirmInputBox": true,
    "cSpell.words": [
        "dtid",
        "Zettelkasten"
    ]
}