{
    "markdownlint.config": {
        "default": true,
        "MD007": { "indent": 2 },
        "MD013": false,
        "MD025": false,
        "MD047": false,
        "MD053": false
    },
    "foam.edit.linkReferenceDefinitions": "withExtensions",
    "foam.openDailyNote.filenameFormat": "yy/mm/dd/HHMM",
    "foam.openDailyNote.directory": "zettel",
    "filewatcher.commands": [
        {
            "match": "\\.md$",
            "cmd": "foam-vscode.update-wikilinks",
            "event": "onFileChange"
        }
    ]
}